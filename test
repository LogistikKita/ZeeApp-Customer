// --- DATA STATIS & DUMMY (Untuk Tampilan Awal) ---
const MENUS = [
    { label: 'Beranda', id: 'home' },
    { label: 'Layanan & Armada', id: 'maintenance' },
    { label: 'Galeri & Portofolio', id: 'maintenance' },
    { label: 'Blog / Berita', id: 'maintenance' },
    { label: 'Mitra Armada', id: 'maintenance' },
    { label: 'Tentang Kita', id: 'maintenance' },
    { label: 'Hubungi Kita', id: 'contact' }, // Scroll ke footer/contact
